<div class='row'>
  <div class="small-12 columns">
    <div class="panel text-center">
      <h1>Package</h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-12 text-center columns">
    <%= link_to "New Shipment", new_package_path, class: :button, method: :get %>
    <%= link_to "Package History", packages_show_path, class: :button, method: :get %>
  </div>
</div>

<% if @postage_label %>
<div class="row">
  <div class="small-6 text-center columns">
    <%= image_tag @postage_label %>
  </div>
  <div class="small-6 text-center columns">
      <form>
        <input class="button" type="button" value="Print this page" onClick="window.print()">
      </form>
  </div>
</div>
<% end %>